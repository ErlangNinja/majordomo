{recursive_cmds, [eunit, compile]}.
{sub_dirs, ["rel"]}.
{erl_opts, [debug_info, {d, debug}]}.
{eunit_opts, [{report, {eunit_surefire, [{dir, "."}]}}]}.
{cover_enabled, true}.
{cover_export_enabled, true}.

{edoc_opts, [
    {new, true},
    {doclet, edown_doclet},
    {src_path, ["src"]},
    {stylesheet, ""},
    {image, ""},
    {app_default, "http://www.erlang.org/doc/man"},
    {top_level_readme, {"./README.md", "http://github.com/ehedenst/majordomo"}}
]}.

{deps, [
    {ezmq, "0.1", {git, "git://github.com/zeromq/ezmq.git", master}}
]}.
